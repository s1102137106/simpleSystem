@model simpleSystem.ViewModels.OrderEditViewModels



<form id="EditForm" action="/Order/Edit" method="post" role="form">

    <div class="form-horizontal">
        <h1 style="font-family:微軟正黑體;">修改訂單</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.OrderID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input form-control text-box single-line input-validation-error data-val-number="請輸入數字" data-val-required="必填" type="number" class="form-control" id="OrderID" name="OrderID" placeholder="請輸入要查詢的訂單編號" value="@Model.OrderID">
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.CustName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustName, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.EmpName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="EmpId" name="EmpId" class="form-control">
                    @foreach (var Emp in (List<SelectListItem>)ViewBag.Emps)
                    {
                        if (0 == Int32.Parse(Emp.Value))
                        {
                            <option selected value="@Emp.Value">@Emp.Text</option>
                        }
                        else
                        {
                            <option value="@Emp.Value">@Emp.Text</option>
                        }

                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrderDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RequiredDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RequiredDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RequiredDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShippedDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ShippedDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ShippedDate, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.ShipperName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="ShipperId" name="ShipperId" class="form-control">
                    <option value="0"></option>
                    @foreach (var ShipperId in (List<SelectListItem>)ViewBag.ShipperIds)
                    {
                        if (0 == Int32.Parse(ShipperId.Value))
                        {
                            <option selected value="@ShipperId.Value">@ShipperId.Text</option>
                        }
                        else
                        {
                            <option value="@ShipperId.Value">@ShipperId.Text</option>
                        }

                    }
                </select>
             </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Freight, htmlAttributes: new { @class = "control-label col-md-2" })
